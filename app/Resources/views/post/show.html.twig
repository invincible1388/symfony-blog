{% extends 'base.html.twig' %}

{% block body %}
    <article class="post post-{{ post.id }}">
	<header class="entry-header">
		<h1 class="entry-title">
			<a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.title }}</a>
		</h1>
		<div class="entry-meta">
			<span class="post-category"><a href="#">Web Design</a></span>
			<span class="post-category"><a href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a></span>
			{% if post.publishedAt %}<span class="post-date"><a href="#"><time class="entry-date" datetime="{{ post.publishedAt|date('Y-m-d H:i:s') }}">{{ post.publishedAt|date('F j, Y, g:i a') }}</time></a></span>{% endif %}

			<span class="post-author"><a href="#"><em>Vilash Varghese</em></a></span>

		</div>
	</header>
	<div class="entry-content clearfix">
		<p>{{ post.body }}</p>
		<div class="read-more cl-effect-14">
			<a href="{{ path('post_show', { 'id': post.id }) }}" class="more-link">Continue reading <span class="meta-nav">â†’</span></a>
		</div>
	</div>
</article>

    <ul class="list-unstyled list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('post_index') }}"> <i class="ion-ios-arrow-thin-left"></i> &nbsp;Back to the list</a>
        </li>
        <li>
            <a class="btn btn-default" href="{{ path('post_edit', { 'id': post.id }) }}"> <i class="ion-ios-compose-outline"></i> &nbsp; Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
